@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<div class="jumbotron">
<h2>Edit</h2>
</div>

<h4>Edit this engineer: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)
  <br>
  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.RepairMade)
  @Html.EditorFor(model => model.RepairMade)
  <br>
  @Html.Label("Select machine")
  @Html.DropDownList("MachineId")
  <br>

  <input type="submit" value="Save" />
}
<hr>
<div id="footer">
<button style="height:100px; width:250px; font-size:20px;">@Html.ActionLink("Back to Engineers", "Index")</button>
</div>