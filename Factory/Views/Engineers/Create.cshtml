@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h4>Add a new Engineer</h4>
<div class="row">
  <div class="col-md-4">
    <div class="card">
      @using (Html.BeginForm())
      {
        @Html.LabelFor(model => model.Name)
        <br>
        @Html.TextBoxFor(model => model.Name)
        <br>
        @Html.LabelFor(model => model.RepairMade)
        <br>
        @Html.EditorFor(model => model.RepairMade)
        <br>
        @Html.Label("Select machine")
        <br>
        @Html.DropDownList("MachineId")
        <br>
        @* @Html.Label("Select Major")
        <br>
        @Html.DropDownList("DepartmentId")
        <br> *@
        <input type="submit" value="Add new engineer" />
      }
    </div>
  </div>
</div>
<p>@Html.ActionLink("Show all engineers", "Index")</p>