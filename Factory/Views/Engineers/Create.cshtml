@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<div class="jumbotron">
<h4>Add a new Engineer</h4>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="card">
      @using (Html.BeginForm())
      {
        @Html.LabelFor(model => model.Name)
        <br>
        @Html.TextBoxFor(model => model.Name)
        <br>
        @Html.LabelFor(model => model.RepairMade)
        <br>
        @Html.EditorFor(model => model.RepairMade)
        <br>
        @Html.Label("Select machine")
        <br>
        @Html.DropDownList("MachineId")
        <br>
        <input type="submit" value="Add new engineer" />
      }
    </div>
  </div>
</div>
<div id="footer">
<button style="height:100px; width:250px; font-size:20px;">@Html.ActionLink("Show all engineers", "Index")</button>
</div>
