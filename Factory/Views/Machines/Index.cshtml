@{
  Layout = "_Layout";
}

@using Factory.Models;

<div class="jumbotron">
<h1>Machines</h1>
</div>

@if (@Model.Count == 0)
{
  <h3>No machines have been added yet!</h3>
} 

<ul>
  @foreach(Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</li>
  }
</ul>

<div id="footer">
<button style="height:100px; width:250px; font-size:20px;">@Html.ActionLink("Home", "Index", "Home")</button>
<button style="height:100px; width:250px; font-size:20px;">@Html.ActionLink("Add new machine", "Create")</button>
</div>