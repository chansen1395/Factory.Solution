@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class="jumbotron">
<h4>Add a new machine</h4>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="card">
      @using (Html.BeginForm())
      {
        @Html.LabelFor(model => model.Name)
        <br>
        @Html.TextBoxFor(model => model.Name)
        <br>
        @Html.LabelFor(model => model.SerialNumber)
        <br>
        @Html.TextBoxFor(model => model.SerialNumber)
        <br>
        @Html.LabelFor(model => model.Operational)
        <br>
        @Html.EditorFor(model => model.Operational)
        <br>

        <input type="submit" value="Add new machine" />
      }
    </div>
  </div>
</div>

<div id="footer">
<button style="height:100px; width:250px; font-size:20px;">@Html.ActionLink("Show all machines", "Index")</button>
</div>